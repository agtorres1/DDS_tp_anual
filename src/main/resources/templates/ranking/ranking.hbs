{{#partial "contenido" }}
<div class="container-sm mt-3">
    <div class="card bg-dark text-white mx-auto p-3" style="border-radius: 1rem; max-width:600px;">
        <div class="card-body">
        <h1 class="text-center mb-3">Ranking</h1>
        <hr/>
        <table>
            <thead>
                <tr>
                    <th>Puesto</th>
                    <th>Entidad</th>
                </tr>
            </thead>
            {{#each ranking}}
            <tbody>
                <tr>
                    <td>{{inc @index}}</td>
                    <td>{{this.nombre}}</td>
                </tr>
            </tbody>
            {{/each}}
        </table>
        </div>
    </div>
</div>
{{/partial}}
{{> templates/base }}