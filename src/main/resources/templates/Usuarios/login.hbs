{{#partial "contenido" }}
<div class="container-sm mt-3">
    <div class="card bg-dark text-white mx-auto p-4" style="border-radius: 1rem; max-width:600px;">
        <div class="card-body">
        <h1 class="text-center mb-3">Iniciar sesión</h1>
            <form method="POST" action="/login">
                <label class="form-label">Nombre de usuario</label>
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <span class="fas fa-user"></span>
                    </span>
                    <input name="nombreDeUsuario" type="text" class="form-control" placeholder="Nombre de Usuario" />
                </div>
                <label class="form-label">Contraseña</label>
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </span>
                    <input name="contrasenia" type="password" class="form-control" placeholder="Contraseña" />
                </div>
                <button type="submit" class="btn btn-lg btn-primary w-100 mt-3">Ingresar</button>
            </form>
        </div>
    </div>
</div>
{{/partial}}
{{> templates/base }}